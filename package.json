{
  "name": "media-matter",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:server": "turbo build --filter=server",
    "dev": "turbo dev --env-mode=loose",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server --env-mode=loose",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start": "turbo start",
    "start:client": "turbo start --filter=client",
    "start:server": "turbo start --filter=server --env-mode=loose"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
